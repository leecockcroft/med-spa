---
// No props needed
import "aos/dist/aos.css";
---

<!-- Load AOS library -->
<script src="https://unpkg.com/aos@next/dist/aos.js" defer></script>

<!-- Initialize AOS -->
<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    AOS.init({
      once: true,
      delay: 0,
      duration: 600,
    });
  });
</script>
