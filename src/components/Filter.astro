---
const { active } = Astro.props;
---

<div class="bg-blue-50 py-10 sm:py-16 md:py-20 text-center">
  <div class="flex flex-wrap justify-center gap-4 my-6 sm:my-8 massage-filter">
    <a
      href="/massage"
      class={`px-4 py-2 border rounded transition uppercase ${
        active === "massage"
          ? "bg-indigo-600 text-white"
          : "bg-white hover:bg-blue-100 text-gray-800"
      }`}
    >
      Massage
    </a>

    <a
      href="/ritual"
      class={`px-4 py-2 border rounded transition uppercase ${
        active === "ritual"
          ? "bg-indigo-600 text-white"
          : "bg-white hover:bg-blue-100 text-gray-800"
      }`}
    >
      Ritual Spa
    </a>

    <a
      href="/brows"
      class={`px-4 py-2 border rounded transition uppercase ${
        active === "brows"
          ? "bg-indigo-600 text-white"
          : "bg-white hover:bg-blue-100 text-gray-800"
      }`}
    >
      Brows and Lashes
    </a>

    <a
      href="/manicure"
      class={`px-4 py-2 border rounded transition uppercase ${
        active === "manicure"
          ? "bg-indigo-600 text-white"
          : "bg-white hover:bg-blue-100 text-gray-800"
      }`}
    >
      Manicure & Pedicure
    </a>

    <a
      href="/waxing"
      class={`px-4 py-2 border rounded transition uppercase ${
        active === "waxing"
          ? "bg-indigo-600 text-white"
          : "bg-white hover:bg-blue-100 text-gray-800"
      }`}
    >
      Waxing
    </a>
  </div>
</div>
