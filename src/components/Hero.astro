---
import { Image } from "astro:assets";

import "../styles/global.css";
---

<section class="relative w-full h-screen overflow-hidden mb-32">
  <!-- Mobile Fallback Image -->
  <div class="absolute inset-0 w-full h-full object-cover z-0 md:hidden">
    <img
      src="/images/2a1274c8-6b53-439f-9440-ea06d1810918.webp"
      alt="Massage and spa background"
      width="1920"
      height="1080"
      fetchpriority="high"
    />
  </div>

  <video
    autoplay
    muted
    loop
    playsinline
    poster="/images/2a1274c8-6b53-439f-9440-ea06d1810918.webp"
    preload="auto"
    class="md:block absolute inset-0 w-full h-full object-cover z-0"
  >
    <source src="/videos/IMG_0871-compressed.mp4" type="video/mp4" />
  </video>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/40 z-10"></div>

  <!-- Text Content -->
  <div
    class="absolute inset-0 z-20 flex flex-col justify-center items-center text-center px-6"
  >
    <h1 class="text-white text-4xl md:text-6xl font-serif mb-4">
      Wellness at your pace in your space.
    </h1>
    <p class="text-white text-lg md:text-xl mb-6 max-w-2xl">
      Massage & Spa at Your Doorstep in Estepona â€” that's how luxury is meant to be.
    </p>
    <a
      href="/massage"
      class="bg-white text-gray-800 px-6 py-3 rounded hover:bg-gray-200 transition"
    >
      Explore Services
    </a>
  </div>
</section>
