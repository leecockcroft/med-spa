</a>
<Footer />

<style>
  .service-title {
    font-family: "Tenor Sans", "Tenor Sans Placeholder", sans-serif;

    letter-spacing: 0.5rem;
    font-weight: 200;
  }
</style>
<script type="module">
  import Swiper from "swiper";

  const swiper = new Swiper(".mySwiper", {
    loop: true,
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
