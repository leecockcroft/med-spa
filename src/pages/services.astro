import "../styles/global.css";
const filter = Astro.url.searchParams.get('filter') ?? 'all';

let activeFilter = 'all';
---

<Layout>

    
<Navbar/>
<Filter/>

<div class="flex flex-wrap justify-center gap-6 px-4 ">
