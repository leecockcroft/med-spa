---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Services from "../components/Services.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Massage in Estepona Blog | Massage Art"
  description="Explore massage tips, wellness advice, and relaxation guides from Estepona's trusted massage studio."
  canonical="https://massageartestepona.com/blog"
/>
<head>
  <head>
    <title>Massage in Estepona | Massage Art</title>
    <meta
      name="description"
      content="Professional massage therapy in Estepona for relaxation, pain relief, and wellness."
    />
    <link rel="canonical" href="https://massageartestepona.com" />
    <meta property="og:title" content="Massage in Estepona | Massage Art" />
    <meta
      property="og:description"
      content="Relaxation and wellness in Estepona with expert massage therapy."
    />
    <meta
      property="og:image"
      content="https://massageartestepona.com/og-image.jpg"
    />
    <meta property="og:type" content="website" />
  </head>

  <Navbar />

  <section class="bg-[#f6f5f1] py-16 px-6 text-center">
    <h2
      class="mt-10 text-3xl font-semibold tracking-wide text-gray-800 uppercase font-tenor"
    >
      Blog
    </h2>
  </section>

  <Services
    title="Massage in Estepona"
    description="The Ultimate Guide to Relaxation on the Costa del Sol"
    images="../images/training-828726_1280.jpg"
  />

  <Footer />
</head>
